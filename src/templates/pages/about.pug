                      svg(width="130" height="130").skill__circle
                        circle(r="45" cx="65" cy="65" stroke="#ccc"
                        fill="none").g-circles
                        circle(r="45" cx="65" cy="65" stroke="#6c9c5a" transform="rotate(-90 65 65)").sector
                      .skill__title PHP
                  li.skills-row__item
                    .skill
                      svg(width="130" height="130").skill__circle
